{% extends 'base.html.twig' %}

{% block title %} Liste des catégories {% endblock %}

{% block body %}

<div class="">
    <h1> Liste des catégories </h1>

    <ul>
        {% for categorie in categories %}
            <li>
                <a href="{{ path('show_categorie', {'id': categorie.id}) }}"> {{ categorie.nom }} </a>
            </li>
        {% endfor %}
    </ul>
    
</div>
{% endblock %}


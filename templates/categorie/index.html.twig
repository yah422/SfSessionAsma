{% extends 'base.html.twig' %}

{% block title %} Liste catégorie {% endblock %}

{% block body %}
<div class="content mt-12">

    <div id="ficheStagiaire" class="flex items-center mb-6">
        <img id="icons" src="{{ asset('img/options-lines (1).png') }}" alt="Graduation Hat" class="h-8 w-8"> 
        <h1 class="text-2xl font-bold ml-4">Liste des catégories</h1>
    </div>

    {% for categorie in categories %}
        <ul class="divide-y divide-gray-200 border rounded-lg">   
            <li class="px-4 py-2 hover:bg-gray-100"> 
                <a href="{{ path('show_categorie',{'id': categorie.id })}}" class="text-blue-600 hover:underline"> 
                    {{ categorie.nom }} 
                </a>
            </li>
        </ul> <br>            
    {% endfor %}
    <br>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('add_categorie') }}" class="text-white font-bold py-2 px-4 rounded" style="background-color: #346E74;">
        Ajouter une catégorie
    </a>
{% endif %}
    
</div>
{% endblock %}


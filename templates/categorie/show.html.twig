{% extends 'base.html.twig' %}

{% block title %} Liste sessions ! {% endblock %}

{% block body %}

<div class="content mt-12">

    <div id="ficheStagiaire">
        <h1 class="text-2xl font-bold mb-6"> Liste des sessions pour {{ categorie.nom }} </h1>
    </div>
    <br>
    {% for session in categorie.session %}
        <ul class="divide-y divide-gray-200 border rounded-lg">
            <li class="px-4 py-2 hover:bg-gray-100">
                <a href="{{ path('show_session',{'id':session.id })}}" class="text-blue-600 hover:underline"> {{ session.nom }} </a>
            </li>
        </ul>
    {% endfor %}
    
</div>

{% endblock %}

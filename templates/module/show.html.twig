{% extends 'base.html.twig' %}

{% block title %} Détail Module {% endblock %}

{% block body %}

<div class="content mt-12">

    {# --------------------------------  Affichage details modules  ----------------------------- #}

    <div id="ficheStagiaire" class="mb-6">
        <h1 class="text-2xl font-bold">Détails du module : {{ module.nom }}</h1><br>
    </div>
    
    <div id="DetailsStagiaire" class="bg-white p-6 rounded-lg shadow-md">
        <p class="text-gray-700">
            <strong class="font-semibold">Intitulé:</strong> {{ module.nom }} <br>
        </p>
    </div>
    <br>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('add_module') }}" class="text-white font-bold py-2 px-4 rounded" style="background-color: #346E74;">
            Ajouter un module
        </a>
    {% endif %}
     


  

{% endblock %}

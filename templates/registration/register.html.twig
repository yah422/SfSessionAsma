{% extends 'base.html.twig' %}
 
{% block title %}Inscription{% endblock %}
 
{% block body %}
<div class="container mx-auto mt-10 p-6 max-w-md bg-white shadow-md rounded">
    <h1 class="text-2xl font-bold mb-6">Inscription</h1>
 
    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="space-y-1">
            {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>
 
        <div class="space-y-1">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="space-y-1">
            {{ form_label(registrationForm.pseudo, 'Pseudo', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            {{ form_errors(registrationForm.pseudo, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>
 
        <button type="submit" class="w-full mt-4 bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}

{% extends 'base.html.twig' %}
 
{% block title %} Se connecter !{% endblock %}
 
{% block body %}
<div class="container mt-5">
    <form class="formi" method="post">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
 
        {% if app.user %}
            <div class="mb-3 alert alert-info">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                <a href="{{ path('app_logout') }}" class="alert-link"> Se déconnecter </a>
            </div>
        {% endif %}
 
        <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
 
        <div class="form-group">
            <label for="username" class="form-label">Email :</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        </div>
 
        <div class="form-group">
            <label for="password" class="form-label">Mot de passe :</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        </div>
 
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
 
      
        <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Ajout d'une session{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
        
        <div id="ficheStagiaire" class="mb-6">
            <h1 class="text-2xl font-bold mb-6 text-gray-800">Ajouter une nouvelle session</h1>
        </div> 

        {{ form_start(form) }}
            <div class="space-y-4">

                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Nom de la session</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Formateur</label>
                    {{ form_widget(form.formateur, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Catégorie</label>
                    {{ form_widget(form.categorie, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Nombre de places</label>
                    {{ form_widget(form.nbrePlace, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
                </div>
                
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Date de début</label>
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
                </div>
                
                <div class="mb-4">
                    <label class="block text-gray-700 font-semibold mb-2">Date de fin</label>
                    {{ form_widget(form.dateFin, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
                </div>

                <button type="submit" class="text-white font-bold py-2 px-4 rounded" style="background-color: #346E74;">
                    Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

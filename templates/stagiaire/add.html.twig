{% extends 'base.html.twig' %}

{% block title %}Ajout d'un.e stagiaire {% endblock %}

{% block body %}
    <div class="container mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
        
        <div id="ficheStagiaire" class="mb-6">
            <h1 class="text-2xl font-bold mb-6 text-gray-800"> Ajouter un.e stagiaire </h1>
        </div> 

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            {{ form_row(form.nom, {'label': 'Nom', 'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            
            {{ form_row(form.prenom, {'label': 'Prénom', 'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            
            {{ form_row(form.email, {'label': 'Email', 'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            
            {{ form_row(form.tel, {'label': 'Téléphone', 'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            
            {{ form_row(form.dateNaissance, {'label': 'Date de Naissance', 'attr': {'class': 'w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
            
            <button type="submit" class="text-white font-bold py-2 px-4 rounded" style="background-color: #346E74;">
                Enregistrer
            </button>      
        {{ form_end(form) }}
    </div>
{% endblock %}

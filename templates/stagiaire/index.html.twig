{% extends 'base.html.twig' %}

{% block title %} Stagiaires ! {% endblock %}

{% block body %}

<div class="content mt-12">

    <div id="ficheStagiaire" class="flex items-center mb-6">
        <img id="icons" class="w-8 h-8" src="{{ asset('img/graduation-hat.png') }}" alt="Graduation Hat">
        <h1 class="text-2xl font-bold ml-4">Liste des stagiaires</h1>
    </div>
    
    {% for stagiaire in stagiaires %}
        <ul class="divide-y divide-gray-200">
            <li class="py-4">
                <a href="{{ path('show_stagiaire', {'id': stagiaire.id }) }}" class="text-blue-500 hover:text-blue-700">
                    {{ stagiaire.nom }} {{ stagiaire.prenom }}
                </a>
            </li>
        </ul>
    {% endfor %}
 
</div>
{% endblock %}
